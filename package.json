{
  "name": "framework-cli",
  "version": "0.0.1",
  "description": "Gluestack V2 Framework CLI Project",
  "main": "index",
  "scripts": {
    "install-all": "npm install --workspaces --if-present",
    "build:plugins": "npm run build --workspaces --if-present",
    "lint:plugins": "npm run lint --workspaces --if-present",
    "watch:cli": "npm run watch --workspace @gluestack-v2/framework-cli",
    "watch:develop": "npm run watch --workspace @gluestack-v2/glue-plugin-develop",
    "watch:router-nginx": "npm run watch --workspace @gluestack-v2/glue-plugin-router-nginx",
    "watch:web": "npm run watch --workspace @gluestack-v2/glue-plugin-web",
    "watch:service-sdk": "npm run watch --workspace @gluestack-v2/glue-plugin-service-sdk",
    "watch:service-gateway": "npm run watch --workspace @gluestack-v2/glue-plugin-service-gateway",
    "watch:functions": "npm run watch --workspace @gluestack-v2/glue-plugin-functions"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gluestack-v2/glue-cli"
  },
  "keywords": [
    "gluestack",
    "v2",
    "fullstack",
    "framework",
    "cli",
    "mobile",
    "web",
    "storybook",
    "shared-components"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.15.5"
  },
  "workspaces": [
    "packages/*"
  ]
}
